<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/md_dialog_horizontal_margin">

    <com.vng.materialdialogs.internal.rtl.RtlTextView
        android:id="@+id/md_text_title"
        style="@style/MD_Dialog_Title_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Use Google's location service?" />

    <ProgressBar
        android:id="@android:id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>